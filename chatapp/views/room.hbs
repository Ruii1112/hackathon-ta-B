<div class="container2">
    <div class="row">
        <div class="title_logo">
            <img
            src="/images/rakus_logo.png"
            alt="トップ画像"
            />
        </div>
    </div>
    <div class="users">
        <p>ユーザー一覧</p>
        <div id="users"></div>
    </div>
    <div class="main">
        <form method="post" action="/">
            <div class="rest">
                <input type="button" value="一時休止" class="common-button room-rest_button" id="room-rest_button" onclick="rest();">
            </div>
            <div class="room-login_user">
                ログインユーザ：{{userName}}さん
                <input id="userName" type="hidden" value="{{userName}}">
            </div>
            <div class="room-message">
                <textarea id="message" rows="4" class="room-message_textarea" placeholder="投稿文を入力してください"></textarea>
            </div>
            <div class="room-submit">
                <input type="button" value="投稿" class="common-button room-publish_button" id="room-publish_button" onclick="publish();">
                <input type="button" value="メモ" class="common-button room-memo_button" id="room-memo_button" onclick="memo();">
            </div>
            <div class="sort">
                <input type="button" value="古い順" class="common-button room-sort_button" id="room-sort_button" onclick="sort();">
            </div>
            <div class="room-thread">
                <div id="thread"></div>
            </div>
            <div class="room-exit">
                <input type="button" value="退室する" class="common-button room-exit_button" onclick="exit();">
            </div>
        </form>
    </div>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>
<script src="/javascripts/room.js"></script>